{
  "name": "yonix-launcher",
  "version": "1.0.0",
  "description": "Minecraft Modpack Launcher for Fabric 1.21.1",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "author": "YoNiX",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "electron-store": "^8.1.0",
    "got": "^11.8.6",
    "adm-zip": "^0.5.10"
  },
  "build": {
    "appId": "com.yonix.launcher",
    "productName": "YoNiX Launcher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  }
}
